::-webkit-input-placeholder
    color #666
:-moz-placeholder
    color #666
    opacity 1
::-moz-placeholder
   color #666
   opacity 1
:-ms-input-placeholder
   color #666

textarea:focus::-webkit-input-placeholder,
input:focus::-webkit-input-placeholder
    opacity 0
textarea:focus:-moz-placeholder,
input:focus:-moz-placeholder
    opacity 0
textarea:focus::-moz-placeholder,
input:focus::-moz-placeholder
    opacity 0
textarea:focus:-ms-input-placeholder,
input:focus:-ms-input-placeholder
    opacity 0


/* Форма */
$placeholder-color = #666


.form
    &-input   /* input */
        width 100%
        height 59px
        border 1px solid #96b1bc
        color #96b1bc
        text-align center
        display block
        margin 0 0 5px
        font 300 24px/59px 'arial', sans-serif
        outline none
        &.error
            border 1px solid red !important
        &:focus
            color #000
        &::-webkit-input-placeholder
            color $placeholder-color
        &::-moz-placeholder
            color $placeholder-color /* Firefox 19+ */
        &:-moz-placeholder
            color $placeholder-color /* Firefox 18- */
        &:-ms-input-placeholder
            color $placeholder-color
    &-label
        position relative
    &-submit   /* Кнопка submit */
        semibold()
        color $black
        border 1px solid #757575
        border-radius 30px
        width 100%
        height 45px
        line-height 45px
        background #fff
        text-align center
        cursor pointer
        outline none
        transition background .3s
        -webkit-appearance none
        font-size 18px
        &:hover
            background #eae9e9
            color $blue
            border-color $blue
            box-shadow inset 0 0 0 1px $blue
        @media screen and (min-width: 975px)
            padding-left 50px
            padding-right 50px
            width auto
            display block
            margin 0 auto

label.error
    display none !important
    position absolute
    top 0
    left 0
    font 400 14px/24px 'arial', sans-serif
    padding 0 10px
    background #F3CB1C
    box-shadow 0 1px 2px #8B7308
    color #000
    transform translateY(-100%)
    &:after
        content ''
        position absolute
        bottom -9px
        left 5px
        width 0
        height 0
        border-left 7px solid transparent
        border-right 7px solid transparent
        border-top 10px solid #F3CB1C

