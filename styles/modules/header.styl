header
  position relative
  z-index 10
  padding 20px 0
  background #fff
  box-shadow 0 1px 7px rgba(0, 0, 0, .1)
  .wrapper
    clearfix()
  .logo
    background url('../img/sprite.png') no-repeat 0 0
    width 180px
    height 71px
    margin 0 auto
    @media screen and (min-width: 768px)
      float left
    a
      display block
      width 100%
      height 100%

  .contacts
    display none
    @media screen and (min-width: 768px)
      display block
      float right
      height 70px
      > div
        position relative
        line-height 35px
        height 35px
        font-size 22px
        padding-left 30px
        &:after

        > a
          font-size 22px
          color $black
          text-decoration none
      .tel:after
        content ''
        background: url('../img/sprite.png') no-repeat -74px -178px;
        width: 26px;
        height: 26px;
        position absolute
        left 0
        top 50%
        margin-top -(@height/2)
      .skype:after
        content ""
        background: url('../img/sprite.png') no-repeat -38px -178px;
        width: 26px;
        height: 26px;
        position absolute
        left 0
        top 50%
        margin-top -(@height/2)


