h2
  bold()
  display block
  color $blue
  font-size 24px
  text-align center
  @media screen and (min-width: 975px)
    font-size 30px
    line-height 30px
.main
  padding-top 40px
  padding-bottom 20px
  background url("../img/bg-pad.png") no-repeat top center
  @media screen and (min-width: 975px)
    padding-top 80px
    background none
.lead-title
  text-align center
  margin-bottom 20px
  @media screen and (min-width: 975px)
    margin-bottom 60px
    position relative
    &:before
      content ""
      position absolute
      left 50%
      top 50%
      width 975px
      height 233px
      margin-left -(@width/2)
      margin-top -(@height/2)
      background url("../img/h1-bg.png") no-repeat 0 0
  h1
    heavy()
    color $blue
    text-transform uppercase
    font-size 38px
    line-height 1
    position relative
    z-index 1
    @media screen and (min-width: 975px)
      font-size 48px
      line-height 1.2
      br
        display none
    span
      display inline-block
      font-size 20px
      line-height 1.2
      margin-top 10px
      @media screen and (min-width: 975px)
        font-size 30px
        line-height 1.2



.lead
  margin-bottom 45px
  background #fff
  border-radius 8px
  padding 5px 20px
  box-shadow 0 1px 7px rgba(0,0,0,.1)
  padding-left 5px
  padding-right 5px
  @media screen and (min-width: 975px)
    padding-top 35px
    padding-bottom 35px
    width 750px
    margin 0 auto
    margin-bottom 45px
  p
    font-size 16px
    line-height 1.2
    text-align center
    text-transform uppercase
    @media screen and (min-width: 568px)
      .mobile
        display none
    @media screen and (min-width: 975px)
      margin-bottom 20px
      display block
      font-size 20px
      &:last-child
        margin-bottom 0
  .links
    padding-top 10px
    text-align center
    a
      display inline-block
      width 48px
      height 48px
      margin-left 5px
      margin-right 5px
      &.vk
        background url('../img/sprite.png') no-repeat 0 -308px
      &.inst
        background: url('../img/sprite.png') no-repeat -61px -308px;
      &.yt
        background: url('../img/sprite.png') no-repeat -122px -308px;
      &.fb
        background: url('../img/sprite.png') no-repeat -183px -308px;
      @media screen and (min-width: 975px)
        margin-left 25px
        margin-right 25px

.pay
  position relative
  margin-bottom 45px
  text-align center
  padding 60px 0 15px 0
  border-top 1px solid $orange
  border-bottom 1px solid $orange
  font-size 16px
  line-height 1.2
  &:after
    content ''
    position absolute
    left 50%
    top 15px
    background: url('../img/sprite.png') no-repeat 0 -262px;
    width: 282px;
    height: 30px;
    margin-left -(@width/2)
  @media screen and (min-width: 975px)
    width 600px
    margin 0 auto
    margin-bottom 45px
.garant
  .columns
    clearfix()
    padding-top 20px
  .item
    margin-bottom 45px
    font-size 16px
    line-height 22px
    padding-top 160px
    text-align center
    @media screen and (min-width: 680px)
      width 33.333%
      float left
    &.people
      background url("../img/people.png") no-repeat top center
    &.star
      background url("../img/star.png") no-repeat top center
    &.calendar
      background url("../img/calendar.png") no-repeat top center
    span
      bold()
      display block
      font-size 18px

.lead-form
  border 1px solid $orange
  border-radius 7px
  padding 15px 20px
  background #fff
  @media screen and (min-width: 975px)
    width 710px
    margin 20px auto
    margin-bottom 60px
  p
    book()
    display block
    margin 0
    padding-top 15px
    padding-bottom 15px
    text-align center
    color #666666
  .popup_thank_you
    semibold()
    display none
    text-align center
    font-size 18px
    line-height 1.2
    padding-top 10px
    padding-bottom 10px
.form-consult
  form
    clearfix()
    .form-label
      position relative
      margin-bottom 10px
      &:after
        content ''
        position absolute
        right 5px
        top 50%
      &.icon-textarea:after
        background: url('../img/sprite.png') no-repeat -76px -214px;
        width: 18px;
        height: 18px;
        top 5px
      &.icon-email:after
        background: url('../img/sprite.png') no-repeat -49px -214px;
        width: 19px;
        height: 16px;
        margin-top -(@height/2)
      &.icon-tel:after
        background: url('../img/sprite.png') no-repeat -24px -214px;
        width: 17px;
        height: 17px;
        margin-top -(@height/2)
      &.icon-name:after
        background: url('../img/sprite.png') no-repeat 0 -214px;
        width: 16px;
        height: 18px;
        margin-top -(@height/2)
      textarea, input
        book()
        color #666666
        font-size 18px
        border 1px solid #757575
        text-align left
        padding-left 10px
        padding-right 10px
        border-radius 5px
        &:focus
          border-color #606060 - 25%
      input
        height 36px
        line-height 36px
      textarea
        padding-top 5px
        padding-bottom 5px
        min-height 80px
        line-height 20px
    @media screen and (min-width: 975px)
      padding-left 45px
      padding-right 45px
      .icon-textarea
        margin-bottom 15px
      .icon-name, .icon-tel, .icon-email
        width 182px
        height 35px
        margin-right 15px
        margin-bottom 15px
        float left
      .icon-email
        margin-right 0
.footer
  padding 20px 0
  background #e1e1e1
  @media screen and (min-width: 975px)
    height 250px
  .wrapper
    overflow hidden
    position relative
    height 100%
    padding-bottom 50px
    &:after
      content ''
      background: url('../img/sprite.png') no-repeat 0 -262px;
      width: 282px;
      height: 30px;
      position absolute
      left 50%
      bottom 0
      margin-left -(@width/2)
      @media screen and (min-width: 975px)
        left 20px
        bottom 0
        margin-left 0
  .logo
    background url('../img/sprite.png') no-repeat 0 -87px
    width 180px
    height 71px
    margin 0 auto
    a
      display block
      width 100%
      height 100%
    @media screen and (min-width: 975px)
      float left
  .contacts
    margin-top 20px
    text-align left
    font-size 18px
    line-height 1.6
    width 220px
    margin 20px auto 0 auto
    @media screen and (min-width: 975px)
      float right
      margin-top 0
    .title
      text-decoration underline
    > div
      position relative
      display inline-block
      padding 5px 0
      padding-left 35px
      > a
        color $black
        text-decoration none
    .tel:after
      content ''
      background: url('../img/sprite.png') no-repeat -74px -178px;
      width: 26px;
      height: 26px;
      position absolute
      left 0
      top 50%
      margin-top -(@height/2)
    .skype:after
      content ""
      background: url('../img/sprite.png') no-repeat -38px -178px;
      width: 26px;
      height: 26px;
      position absolute
      left 0
      top 50%
      margin-top -(@height/2)
    .email:after
      content ""
      background: url('../img/sprite.png') no-repeat 0 -178px;
      width: 28px;
      height: 20px;
      position absolute
      left 0
      top 50%
      margin-top -(@height/2)
.tabs
  margin-bottom 45px
  .triggers
    clearfix()
    position relative
    margin-bottom 45px
    border 1px solid $blue
    border-radius 5px
    padding-top 40px
    @media screen and (min-width: 680px)
      padding-top 0
    @media screen and (min-width: 975px)
      &.fixed
        position fixed
        top -1px
        width 890px
        left 50%
        margin-left -(@width/2)
        // width 100%
        background #f7f7f7
        z-index 10
        border-radius 0 0 5px 5px
        // border-radius 0
        // border-color #fff
        // box-shadow 0 1px 7px rgba(0, 0, 0, .1)
    a
      semibold()
      float left
      width 33.333%
      padding 15px 0
      color $black
      text-align center
      font-size 16px
      line-height 20px
      text-decoration none
      @media screen and (min-width: 680px)
        width 25%
      @media screen and (min-width: 975px)
        font-size 20px
        line-height 20px
      &.current
        color $blue
        text-decoration underline
        position absolute
        left 0
        top 0
        width 100%
        font-size 20px
        @media screen and (min-width: 680px)
          position static
          width 25%

  .content
    .tab-item
      display block
    h2
      margin-bottom 20px
    .small
      margin-bottom 45px
      text-align center
      font-size 18px
      line-height 1.2
      @media screen and (min-width: 975px)
        font-size 20px
    .choose
      text-align center
      margin-bottom 20px
      span
        display inline-block
        vertical-align middle
        font-size 18px
        line-height 18px
        border-bottom 1px dashed $black
    .columns
      clearfix()
    .column
      border 1px solid $black
      border-radius 20px
      padding 15px 30px
      margin-bottom 20px
      @media screen and (min-width: 568px)
        width 276px
        margin 0 auto
        margin-bottom 20px
        &:last-child
          margin-bottom 0
      @media screen and (min-width: 975px)
        float left
        position relative
        margin-left 10px
        margin-right 10px
        height 450px
        background-color #fff
        border-radius 10px
      .header
        margin-bottom 20px
        padding-bottom 10px
        background url("../img/dashed.png") repeat-x left bottom
        p
          semibold()
          margin 0
          font-size 18px
          line-height 1
          @media screen and (min-width: 975px)
            padding-left 20px
            font-size 20px
        h3
          semibold()
          display block
          margin-bottom 10px
          font-size 26px
          line-height 1
          color $blue
          @media screen and (min-width: 975px)
            padding-left 20px
      .list
        padding-left 10px
        margin-bottom 20px
        li
          position relative
          display block
          padding-top 5px
          padding-bottom 5px
          list-style none
          font-size 16px
          line-height 20px
          padding-left 5px
          &:before
            content ''
            position absolute
            left -10px
            top 13px
            width 6px
            height 6px
            border-radius 50%
            border 1px solid $black
      .footer
        padding 0
        background #f7f7f7
        text-align center
        @media screen and (min-width: 975px)
          background none
          position absolute
          left 0
          bottom 0
          width 100%
          height 120px
        .price
          font-size 24px
          line-height 1
          color $red
          margin-bottom 10px
        .dur
          margin-bottom 10px
          font-size 14px
        .order
          a
            semibold()
            display inline-block
            color $black
            border 1px solid #757575
            border-radius 30px
            width auto
            padding-left 60px
            padding-right 60px
            height 45px
            line-height 45px
            background #f7f7f7
            text-align center
            cursor pointer
            outline none
            transition background .3s
            -webkit-appearance none
            font-size 18px
            &:hover
                background #eae9e9
                color $blue
                border-color $blue
                box-shadow inset 0 0 0 1px $blue




